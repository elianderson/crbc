<head>
<meta charset="utf-8" />
<title><%= @page[:browser_title] %></title>
<link rel="stylesheet" href="/stylesheets/screen.css" media="screen, projection" />
<link rel="icon" href="" />

<meta name="author" content="" />
<meta name="description" content="<%= @page[:meta_description] %>" />
<meta name="keywords" content="<%= @page[:meta_keywords] %>" />
<%= javascript_include_tag 'jquery' %>
<%= @page[:link_url] == '/' ? javascript_include_tag('jquery.cycle.min', 'homepage') : '' %>
</head>
<body class="page-<%= @page[:link_url] == '/' ? 'home' : 'inner' %>">

<div class="wrap header">
	<div id="header" class="wrap">
		<div class="i">
			<a href="/" id="logo" class="ir">Clackamas River Basin Council</a>
			
			<%= render :partial => "/shared/menu" -%>
		</div>
	</div>
</div><!-- END: wrap header -->
	
	<!-- Template Content -->
	<%= yield %>

<div id="footer">
	<div class="i group">
		<div class="col col6">
			<h4>Sign-up For Our Newsletter</h4>
			
			<!--form action="" method="post" id="signup" class="group">
				<label for="email">Email</label>
				<input type="text" name="email" id="email" />
				<button id="submit">Send</button>
			</form-->
			<!--form accept-charset="UTF-8" action="/new-person" id="signup" method="post">
