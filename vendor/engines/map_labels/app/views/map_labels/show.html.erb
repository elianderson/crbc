<% content_for :body_content_title do %>
  <%= @map_label.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @map_label.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @map_label.description %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="map_labels">
      <% @map_labels.each do |map_label| %>
        <li>
          <%= link_to map_label.title, map_label_url(map_label) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
