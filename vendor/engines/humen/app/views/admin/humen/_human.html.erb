<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(human) -%>">
  <span class='title'>
    <%= human.fname %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), human_url(human),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_human_path(human),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_human_path(human),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => human.fname),
        :method => :delete %>
  </span>
</li>
