<% content_for :body_content_title do %>
  <%= @human.fname %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Fname</h1>
    <p>
      <%=raw @human.fname %>
    </p>
  </section>
  <section>
    <h1>Lname</h1>
    <p>
      <%=raw @human.lname %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @human.address %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @human.city %>
    </p>
  </section>
  <section>
    <h1>Zip</h1>
    <p>
      <%=raw @human.zip %>
    </p>
  </section>
  <section>
    <h1>Newsletter</h1>
    <p>
      <%=raw @human.newsletter %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @human.email %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="humen">
      <% @humen.each do |human| %>
        <li>
          <%= link_to human.fname, human_url(human) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
