<h2><%= debug @events %>ing</h2>
<%= form_for [:admin, @person] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @person,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>
  
  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip -%>
  </div>
  
  <div class='field'>
    <%= f.label :newsletter -%>
    <%= f.check_box :newsletter -%>
  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.people.person'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @person.first_name)
              } %>
<% end -%>
