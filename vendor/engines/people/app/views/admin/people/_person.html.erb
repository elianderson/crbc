<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(person) -%>">
  <span class='title'>
    <%= person.email %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), person_url(person),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_person_path(person),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_person_path(person),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => person.first_name),
        :method => :delete %>
  </span>
</li>
